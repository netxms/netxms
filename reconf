#!/bin/sh
rm -f config.cache &&
[ ! -f config/ltmain.sh ] && libtoolize
echo "- aclocal." &&
aclocal-1.7 -I m4 &&
echo "- autoconf." &&
autoconf-2.59 &&
echo "- autoheader." &&
autoheader-2.59 &&
echo "- automake." &&
automake-1.7 -a &&
exit
