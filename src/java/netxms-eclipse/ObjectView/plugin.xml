   <extension
         point="org.eclipse.ui.commands">
      <command
            name="%command.name.ObjectDetails"
            description="%command.description.ObjectDetails"
            categoryId="org.netxms.ui.eclipse.console.category.views"
            id="org.netxms.ui.eclipse.objectview.commands.open_tabbed_object_view">
      </command>
      <command
            description="Toggle Filter"
            id="org.netxms.ui.eclipse.objectview.commands.show_filter"
            name="Toggle Filter">
         <state
               class="org.eclipse.jface.commands.ToggleState"
               id="org.netxms.ui.eclipse.objectview.commands.show_filter.state">
         </state>
         <defaultHandler
               class="org.netxms.ui.eclipse.objectview.actions.ToggleFilterHandler">
            <parameter
                  name="default"
                  value="default">
            </parameter>
         </defaultHandler>
      </command>
      <command
            description="Hide sub-interfaces"
            id="org.netxms.ui.eclipse.objectview.commands.hideSubInterfaces"
            name="Hide sub-interfaces">
         <state
               class="org.eclipse.jface.commands.ToggleState"
               id="org.netxms.ui.eclipse.objectview.commands.hideSubInterfaces.state">
         </state>
         <defaultHandler
               class="org.netxms.ui.eclipse.objectview.actions.HideSubInterfacesHandler">
            <parameter
                  name="default"
                  value="default">
            </parameter>
         </defaultHandler>
      </command>
      <command
            categoryId="org.netxms.ui.eclipse.console.category.views"
            description="Open physical link list"
            id="org.netxms.ui.eclipse.objectview.commands.open_physical_links"
            name="Physical links">
      </command>
      <command
            description="Toggle physical link filter"
            id="org.netxms.ui.eclipse.objectview.commands.show_physical_link_filter"
            name="Toggle filter">
         <defaultHandler
               class="org.netxms.ui.eclipse.objectview.actions.TogglePhysicalLinkFilterHandler">
            <parameter
                  name="default"
                  value="default">
            </parameter>
         </defaultHandler>
         <state
               class="org.eclipse.jface.commands.ToggleState"
               id="org.netxms.ui.eclipse.objectview.commands.show_physical_link_filter.state">
         </state>
      </command>
   </extension>
   
   <extension point = "org.eclipse.ui.actionSets">
	   <actionSet id="org.netxms.ui.eclipse.action_set.object_details"
		   label="%actionSet.label.ObjectDetails"
		   visible="true">
		   <action id="org.netxms.ui.eclipse.objectview.actions.open_tabbed_object_view"
			   menubarPath="view/primary"
			   label="%action.label.ObjectDetails"
			   tooltip="%action.tooltip.ObjectDetails"
			   icon="icons/object_details.png"
			   class="org.netxms.ui.eclipse.objectview.actions.ShowObjectDetailsView"
			   definitionId="org.netxms.ui.eclipse.objectview.commands.open_tabbed_object_view">
		   </action>
	   </actionSet>
    <actionSet
          id="org.netxms.ui.eclipse.action_set.object_managment"
          label="Object Managment"
          visible="true">
       <action
             class="org.netxms.ui.eclipse.objectview.actions.ShowPhysicalLink"
             definitionId="org.netxms.ui.eclipse.objectview.commands.open_physical_links"
             id="org.netxms.ui.eclipse.objectmanager.commands.open_physical_links"
             label="Physical Links"
             menubarPath="config/additions"
             style="push"
             tooltip="Physical links">
       </action>
    </actionSet>
   </extension>

