   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="org.netxms.ui.eclipse.objectview.SourceProvider">
         <variable
               name="org.netxms.ui.eclipse.objectview.ActiveTab"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.netxms.ui.eclipse.objectview.commands.show_filter"
            contextId="org.netxms.ui.eclipse.objectview.context.InterfacesTab"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="M1+F2">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.objectview.commands.show_filter"
            contextId="org.netxms.ui.eclipse.objectview.context.VPNTab"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="M1+F2">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.objectview.commands.show_filter"
            contextId="org.netxms.ui.eclipse.objectview.context.NetworkServiceTab"
            schemeId="org.netxms.ui.eclipse.defaultKeyBinding"
            sequence="M1+F2">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.objectview.commands.show_physical_link_filter"
            contextId="org.netxms.ui.eclipse.objectview.context.PhysicalLinks"
