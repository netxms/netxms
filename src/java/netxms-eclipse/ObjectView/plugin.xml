      </view>
      <view
            allowMultiple="true"
            class="org.netxms.ui.eclipse.objectview.views.SoftwareInventoryView"
            icon="icons/software.png"
            id="org.netxms.ui.eclipse.objectview.views.SoftwareInventoryView"
            name="%view.name.SoftwareInventory"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            class="org.netxms.ui.eclipse.objectview.views.RackView"
