   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.netxms.ui.eclipse.objectview.actions.popup.object.Container"
            objectClass="org.netxms.client.objects.Container">
         <action
               class="org.netxms.ui.eclipse.objectview.actions.ShowStatusMap"
               enablesFor="1"
               id="org.netxms.ui.eclipse.objectview.popupActions.ShowStatusMap_Container"
               label="%action.label.StatusMap">
         </action>
         <action
               class="org.netxms.ui.eclipse.objectview.actions.ShowSoftwareInventory"
               enablesFor="1"
