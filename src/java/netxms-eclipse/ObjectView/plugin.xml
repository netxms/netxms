   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.netxms.ui.eclipse.objectview.view.tabbed_object_view?after=additions">
         <command
               commandId="org.netxms.ui.eclipse.objectview.commands.show_filter"
               label="Show &amp;filter"
               style="toggle"
               tooltip="Show Filter">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="org.netxms.ui.eclipse.objectview.ActiveTab">
                  <or>
                     <instanceof
                           value="org.netxms.ui.eclipse.objectview.objecttabs.InterfacesTab">
                     </instanceof>
                     <instanceof
                           value="org.netxms.ui.eclipse.objectview.objecttabs.VPNTab">
                     </instanceof>
                     <instanceof
                           value="org.netxms.ui.eclipse.objectview.objecttabs.NetworkServiceTab">
                     </instanceof>
                  </or>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.netxms.ui.eclipse.objectview.commands.hideSubInterfaces"
               label="Hide sub-&amp;interfaces"
               style="toggle"
               tooltip="Hide sub-interfaces">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="org.netxms.ui.eclipse.objectview.ActiveTab">
                  <instanceof
                        value="org.netxms.ui.eclipse.objectview.objecttabs.InterfacesTab">
                  </instanceof>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.netxms.ui.eclipse.objectview.commands.show_physical_link_filter"
               label="Show &amp;filter"
               style="toggle"
               tooltip="Show Filter">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="org.netxms.ui.eclipse.objectview.ActiveTab">
                  <instanceof
                        value="org.netxms.ui.eclipse.objectview.objecttabs.PhysicalLinkTab">
                  </instanceof>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
